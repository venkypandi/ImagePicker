<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add your views and content for the bottom sheet -->

    <TextView
        android:id="@+id/selectCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:layout_marginBottom="8dp"
        app:drawableStartCompat="@drawable/baseline_camera_alt_24" />

    <TextView
        android:id="@+id/selectGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:padding="10dp"
        android:gravity="start|center"
        android:drawablePadding="10dp"
        android:layout_marginBottom="8dp"
        app:drawableStartCompat="@drawable/baseline_insert_photo_24" />

</LinearLayout>
